{% extends 'AppFrontOfficeBundle:Alert:layout.html.twig' %}
{% block content %}
    <div class="col-md-12">
        <div class="col-md-6">
        	<h3 class="text-color">Résiliations à venir</h3>
        	{% for contract in contracts %}
        		{% if loop.index%3 == 1 %}
        			<div class="row">
    			{% endif %}
    			<div class="col-md-4 provider {% if loop.index == 1 %}selected{% endif %}">
    				<img data-id="{{ contract.id }}" class="img-thumbnail img-responsive" src="{{ contract.provider.miniatureWebPath }}" />
        			<p class="text-center">{{ contract.name }}</p>
    			</div>
        		{% if loop.index%3 == 0 %}
        			</div>
    			{% endif %}
            {% endfor %}
        	<h3 class="text-color">Résiliations Possibles / Loi Chatel</h3>
        	{% for contract in contractsChatel %}
    			<div class="col-md-4">
    				<img class="img-responsive" src="{{ contract.provider.miniatureWebPath }}" />
        			<p class="text-center">{{ contract.name }}</p>
    			</div>
            {% endfor %}
        </div>
        <div class="col-md-6 text-center">
    		{% for contract in contracts %}
	        	<div class="col-md-12 contract-preview contract-preview-{{ contract.id }}" {% if loop.index > 1 %}style="display: none"{% endif %}>
		        	{% if contract.contractWebPath != "" %}
		        		<img src="{{ contract.contractWebPath }}" title="Contract" />
		        	{% endif %}
					<a href="{{ path('app_front_office_resiliation_choix_formule', {'id': contract.id}) }}" class="pull-left btn btn-danger">Résilier</a>
					<a href="#" class="pull-right btn btn-danger">Ignorer</a>
				</div>
        	{% endfor %}
        </div>
    </div>
{% endblock %}