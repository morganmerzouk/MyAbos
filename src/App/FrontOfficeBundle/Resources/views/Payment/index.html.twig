{% extends '::front-office.html.twig' %}
{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
	<script type="text/javascript">
	    Stripe.setPublishableKey('pk_test_bRKL5eJi4tc9TmWOaUtc0y47');
	    var stripeResponseHandler = function(status, response) {
			var $form = $('#payment-form');
			if (response.error) {
	        	$form.find('.payment-errors').text(response.error.message);
	        	$form.find('button').prop('disabled', false);
	      	} else {
	        	var token = response.id;
	        	// Insert the token into the form so it gets submitted to the server
	        	$form.append($('<input type="hidden" name="stripeToken" />').val(token));
	        	$form.get(0).submit();
	      	}
	    };
	    
	    $(document).on("ready", function() {
			$('#payment-form').on("submit", function(event) {
		        event.preventDefault();
		        var $form = $(this);
		        $form.find('button').prop('disabled', true);
		        Stripe.card.createToken($form, stripeResponseHandler);
	      	});
	    });
  	</script>
{% endblock %}
{% block content %}
{% if message is not null %}
	<h2>Paiement effectué avec succès.</h2>
	<p>Votre contrat a été résilié avec succès, vous recevrez une confirmation par mail une fois la résiliation effective.</p>
{% else %}
	<h2>Paiement</h2>
	<h3>Payez 12.99€</h3>
	<form action="" method="POST" id="payment-form">
	    <span class="payment-errors"></span>
	    <div class="form-row">
			<label>
	        	<span>N° de carte: </span>
	        	<input type="text" size="16" data-stripe="number"/>
	      	</label>
	    </div>
	    <div class="form-row">
	      	<label>
	        	<span>Clé de sécurité: </span>
	        	<input type="text" size="4" data-stripe="cvc"/>
	      	</label>
	    </div>
	    <div class="form-row">
	      	<label>
	        	<span>Date d'expiration (MM/YY): </span>
	        	<input type="text" size="2" data-stripe="exp-month"/>
	  		</label>
	      	<span> / </span>
	      	<input type="text" size="4" data-stripe="exp-year"/>
	    </div>
	    <button type="submit" class="btn btn-danger">Payer</button>
	</form>
{% endif %}
{% endblock %}