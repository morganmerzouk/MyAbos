{% if error %}
    <div class="bg-danger">{{ error|trans }}</div>
{% endif %}
<link rel="stylesheet" media="all" href="{{ asset('bundles/appfrontoffice/css/registration.css') }}">
<div class="clearfix">
	<div class="col-md-6 center-block" id="login-form" >
	    <form id="login-modal" method="post" class="center-block">
	        <input type="hidden" name="_csrf_token" id="csrf_token" value="{{ _csrf_token }}" />
            <input type="text" class="form-control input-lg" id="lm-email" name="_username" value="{{ last_username }}" placeholder="Email" required="required"/>
            <input type="password" class="form-control input-lg" id="lm-password" name="_password" placeholder="Mot de passe" required="required"/>
            <input type="checkbox" id="remember_me" class="remember-me" name="_remember_me" value="on" />
            
    		<input type="hidden" name="_target_path" id="_target_path" value="app_front_office_contract_list" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        	<br />
            <a href="{{ path('fos_user_resetting_request') }}">
                <strong>{{ 'reset_password'|trans }}</strong>
            </a>
        	<input class="btn btn-color btn-block" type="submit" id="_submit" name="_submit" value="Accéder à la plateforme" />
	    </form>
    </div>
</div>