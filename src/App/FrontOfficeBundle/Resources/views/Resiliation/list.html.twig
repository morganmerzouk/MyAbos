{% extends 'AppFrontOfficeBundle:Resiliation:layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-body">
                	<h2>Résilier un contrat</h2>
                	<h3>Sélectionner un abonnement</h3>
			        {% for contract in contracts %}
			        	<div class="col-md-12 row contract">
			        		<div class="col-md-2 text-center">
			        			<strong>Intitulé</strong><br />
			        			{{ contract.name }}
			        		</div>
			        		<div class="col-md-1 text-center">
			        			<strong>Budget</strong><br />
			        			{{ contract.amount }}
			        		</div>
			        		<div class="col-md-3 text-center">
			        			<strong>Date d'engagement</strong><br />
			        			{{ contract.startingDate|date("d/m/Y") }}
			        		</div>
			        		<div class="col-md-3 text-center">
			        			<strong>Date de résiliation possible</strong><br />
			        			{{ contract.endingDate|date("d/m/Y") }}
			        		</div>
			        		<div class="col-md-3 text-center">
			        			<a href="{{ path("app_front_office_resiliation_choix_formule", { "id": contract.id }) }}" class="btn btn-danger">Résilier</a>
			        		</div>
			        	</div>
			        {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}