	                    <p class="clearfix"><img src="{{ app.user.avatarWebPath }}" class="col-md-6 center-block" alt="Photo de profil" /></p>
	                    <a href="{{ path("fos_user_profile_edit") }}" class="btn btn-danger center-block clearfix col-md-6">Modifier</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}