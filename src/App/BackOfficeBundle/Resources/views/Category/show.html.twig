{% extends '::back-office.html.twig' %}

{% block content %}
    <h1>{{ entity.name }} ({% if entity.actif == 1 %}Publié{%else %}Non publié{% endif %})</h1>
    <img src="{{ entity.miniatureWebPath }}" />
    <a class="btn btn-default" href="{{ path('category') }}">
       Retour
    </a>
    <a class="btn btn-danger" href="{{ path('category_edit', { 'id': entity.id }) }}">
        Modifier
    </a>
    <a class="btn btn-danger" href="{{ path('category_delete', { 'id': entity.id }) }}">
        Supprimer
    </a>
{% endblock %}
