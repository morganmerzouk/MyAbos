{% extends '::back-office.html.twig' %}

{% block content %}
    <h2>Liste des catégories</h2>

    <table class="table records_list">
        <thead>
            <tr>
                <th class="text-center">Miniature</th>
                <th class="text-center">Libellé</th>
                <th class="text-center">Publié</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in entities %}
            <tr>
                <td class="text-center"><img src="{{ category.miniatureWebPath }}" width=100 /></td>
                <td>{{ category.name }}</td>
                <td class="text-center">{% if category.actif == 1 %}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{% endif %}</td>
                <td class="text-center">
                    <a title="Voir" href="{{ path('category_show', { 'id': category.id }) }}">
						<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
					</a>
                    <a title="Editer" href="{{ path('category_edit', { 'id': category.id }) }}">
                    	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a title="Supprimer" href="{{ path('category_delete', { 'id': category.id }) }}">
                    	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-danger" href="{{ path('category_new') }}">
       	Ajouter
    </a>
    {% endblock %}
