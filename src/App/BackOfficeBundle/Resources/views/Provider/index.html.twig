{% extends '::back-office.html.twig' %}

{% block content %}
    <h2>Liste des annonceurs</h2>

    <table class="table records_list">
        <thead>
            <tr>
                <th class="text-center">Logo</th>
                <th class="text-center">Catégorie</th>
                <th class="text-center">Libellé</th>
                <th class="text-center">Adresse</th>
                <th class="text-center">Publié</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provider in entities %}
            <tr>
                <td><img src="{{ provider.miniatureWebPath }}" width=100 /></td>
                <td>{{ provider.category }}</td>
                <td>{{ provider.name }}</td>
                <td>{{ provider.address }}</td>
                <td class="text-center">{% if provider.actif == 1 %}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{% endif %}</td>
                <td class="text-center">
                    <a title="Voir" href="{{ path('provider_show', { 'id': provider.id }) }}">
						<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
					</a>
                    <a title="Editer" href="{{ path('provider_edit', { 'id': provider.id }) }}">
                    	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a title="Supprimer" href="{{ path('provider_delete', { 'id': provider.id }) }}">
                    	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-danger" href="{{ path('provider_new') }}">
       	Ajouter
    </a>
    {% endblock %}
