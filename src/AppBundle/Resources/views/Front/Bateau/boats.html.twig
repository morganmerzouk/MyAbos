{% extends "AppBundle:Front:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/bateaux.css') }}">
{% endblock %}   
{% block title %}{{'toptitle'|trans}} - {{'boats'|trans}}{% endblock %}

{% block content %}
    <h1>{{'boats'|trans}}</h1>
    {% for boat in boats %}
	    {% if loop.index0 % 3 == 0 %}
	    	<div class="row-bateau">
	    {% endif %}
        <div class="col-md-4 bateau {% if loop.index0 % 3 == 2 %}bateau-last{% endif %}">
            <h3>{{ boat.name }}</h3>
            <img class="img-responsive img-thumbnail" src="{{ boat.miniatureWebPath }}" alt="photo {{ boat.name }}" /><br />
            <p class="bateau-prix-semaine"> 
                A partir de 1250 â‚¬ la semaine*
                <br />
                <span class="small">Tarif par personne sur une base de 8 personnes</span>
            </p>
            <div class="bateaux-icones col-md-4"><img src="{{ asset('bundles/app/images/icones/boat/1-icons-boat-tech-file-50pix-'~boat.type|lower~'-noir.png') }}" /><br />{{boat.type}}</div>
            <div class="bateaux-icones col-md-4"><img src="{{ asset('bundles/app/images/icones/boat/2-icons-boat-tech-file-50pix-CABINS-'~boat.nbCabine~'-noir.png') }}" /><br />{{boat.nbCabine}} {{'boat_cabine'|trans}}</div>
            
			{% if (boat.nbCouchage > 0) %}<div class="bateaux-icones col-md-4"><img src="{{ asset('bundles/app/images/icones/boat/3-icons-boat-tech-file-50pix-COUCHAGE-noir.png') }}" /><br />{{boat.nbCouchage}} {{'boat_bed'|trans}}</div>{% endif %}
            <p class="bateaux-description">
        		{% if boat.description|length > 100 %}
	        		{{ boat.description|striptags|slice(0,100)|raw }}...
	        	{% else %}
	        		{{ boat.description|striptags|raw }}
	    		{% endif %}
    		</p>
            <a class="btn btn-sm btn-warning pull-right" href="{{ path('boat', { 'id': boat.id }) }}">{{'suite'|trans}}</a>
        </div>
        {% if loop.index0 % 3 == 2 %}
	        </div>
        {% endif %}
    {% endfor %}
{% endblock content %}