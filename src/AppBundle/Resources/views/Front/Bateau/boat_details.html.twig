{% extends "AppBundle:Front:Bateau/boat.html.twig" %}
{% block content %}
    {{ parent() }}
    <div class="col-fiche-bateau col-md-6">
        <h3>{{'boat_configuration'|trans}}</h3>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/1-icons-boat-tech-file-50pix-'~boat.type|lower~'-noir.png') }}" class="pull-left"  /><div class="boat-spec-content">{{boat.type}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/2-icons-boat-tech-file-50pix-CABINS-'~boat.nbCabine~'-noir.png') }}" class="pull-left"  /><div class="boat-spec-content">{{boat.nbCabine}} {{'boat_cabine'|trans}}</div></div>
        {% if (boat.nbCouchage > 0) %}<div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/3-icons-boat-tech-file-50pix-COUCHAGE-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{boat.nbCouchage}} {{'boat_bed'|trans}}</div></div>{% endif %}
        {% if (boat.nbLitDouble > 0) %}<div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/3B-icons-boat-tech-file-50pix-LIT%20DOUBLE-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{boat.nbLitDouble}} {{'boat_beddouble'|trans}}</div></div>{% endif %}
        {% if (boat.nbLitSimple > 0) %}<div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/3A-icons-boat-tech-file-50pix-LIT%20SIMPLE-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{boat.nbLitSimple}} {{'boat_bedsimple'|trans}}</div></div>{% endif %}
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/4-icons-boat-tech-file-50pix-SHOWER-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{boat.nbDouche}} {{'boat_shower'|trans}}</div></div>
        <h3>{{'boat_specificites'|trans}}</h3>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/5-icons-boat-tech-file-50pix-LENGTH-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_length'|trans}}: {{boat.longueur}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/6-icons-boat-tech-file-50pix-WIDTH-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_width'|trans}}: {{boat.largeur}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/7-icons-boat-tech-file-50pix-DRAFT-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_draft'|trans}}: {{boat.tirantDEau}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/8-icons-boat-tech-file-50pix-MAINSAIL-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_main_sail'|trans}}: {{boat.surfacegrandvoile}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/9-icons-boat-tech-file-50pix-MOTOR-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_motor'|trans}}: {{boat.moteur}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/10-icons-boat-tech-file-50pix-FUEL-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_fuelcapacity'|trans}}: {{boat.reservoirCarburant}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/11-icons-boat-tech-file-50pix-WATER-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_watercapacity'|trans}}: {{boat.reservoirEau}}</div></div>
        <h3>{{'boat_equipments'|trans}}</h3>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/12-icons-boat-tech-file-50pix-NRG-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_power'|trans}}: {{boat.energie}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/13-icons-boat-tech-file-50pix-GALLEY-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_galley'|trans}}: {{boat.equipementCuisine}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/14-icons-boat-tech-file-50pix-DINGHY-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_dinghy'|trans}}: {{boat.dinghy}}</div></div>
        <h3>{{'boat_activity'|trans}}</h3>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/15-icons-boat-tech-file-50pix-ENTERTAINMENT-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_loisir'|trans}}: {{boat.loisir}}</div></div>
        <div class="block-boat-spec"><img src="{{ asset('bundles/app/images/icones/boat/16-icons-boat-tech-file-50pix-EQUIPMENTS-noir.png') }}" class="pull-left" /><div class="boat-spec-content">{{'boat_jouet'|trans}}: {{boat.jouet}}</div></div>
    </div>
	<div class="col-md-6 img-details">
            <img class="col-md-6 img-thumbnail img-responsive img-detail" src="{{ boat.miniatureWebPath }}" alt="photo voile" />
            <img class="col-md-6 img-thumbnail img-responsive img-detail" src="{{ boat.photoVoileWebPath }}" alt="photo voile" />
            <img class="col-md-6 img-thumbnail img-responsive img-detail" src="{{ boat.photoMouillageWebPath }}" alt="photo mouillage" />
            <img class="col-md-6 img-thumbnail img-responsive img-detail" src="{{ boat.photoCockpitWebPath }}" alt="photo cockpit"  />
            <img class="col-md-6 img-thumbnail img-responsive img-detail" src="{{ boat.photoCarreWebPath }}" alt="photo carre" />
            <img class="col-md-6 img-thumbnail img-responsive img-detail" src="{{ boat.photoCabineWebPath }}" alt="photo cabine" />
            <div class="text-center">
                {% if skipper is not null %}<a href="{{ path('skipper_contact', {'id': skipper.id }) }}" class="btn btn-warning">{{'contact_skipper'|trans}}</a>{% endif %}
                <a href="{{ path('boat_available', {'id': boat.id }) }}" class=" btn btn-danger">{{'see_available'|trans}}</a>
            </div>
    </div>
{% endblock content %}
    