{% extends "AppBundle:Front:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/lib/slick.js') }}" type="text/javascript"></script>  
    <script src="{{ asset('bundles/app/js/boat/boat_desti.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/boat/boat_available.js') }}" type="text/javascript"></script> 
    <script src="{{ asset('bundles/app/js/boat/boat_contact.js') }}" type="text/javascript"></script> 
    <script type="text/javascript">
        var urlBoatContactAjax = "{{ path('boat_contact', {'id': boat.id }) }}";
    </script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/lib/slick.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/lib/slick-theme.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/bateaux.css') }}">
{% endblock %}   
{% block title %}{{'toptitle'|trans}}{% endblock %}
{% block content %}
    {%  render(controller('AppBundle:Bateau:submenu', { 'id': app.request.get('id') })) %}
    
  	<div class="tab-content">
  		<div role="tabpanel" class="tab-pane active" id="presentation">
    		{% include "AppBundle:Front:Bateau/boat_presentation.html.twig" %}
    	</div>
    	<div role="tabpanel" class="tab-pane" id="details">
    		{% include "AppBundle:Front:Bateau/boat_details.html.twig" %}
    	</div>
    	<div role="tabpanel" class="tab-pane" id="crew">
	    	{% include "AppBundle:Front:Bateau/boat_crew.html.twig" %}
    	</div>
    	<div role="tabpanel" class="tab-pane" id="destination">
	    	{% include "AppBundle:Front:Bateau/boat_desti.html.twig" %}
    	</div>
    	<div role="tabpanel" class="tab-pane" id="available">
	    	{% include "AppBundle:Front:Bateau/boat_available.html.twig" %}
    	</div>
    	<div role="tabpanel" class="tab-pane" id="price">
	    	{% include "AppBundle:Front:Bateau/boat_price.html.twig" %}
    	</div>
    	<div role="tabpanel" class="tab-pane" id="contact">
	    	{% include "AppBundle:Front:Bateau/boat_contact.html.twig" %}
    	</div>
    </div>
{% endblock content %}