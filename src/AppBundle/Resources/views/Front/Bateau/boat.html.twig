{% extends "AppBundle:Front:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/lib/slick.js') }}" type="text/javascript"></script>  
    <script src="{{ asset('bundles/app/js/boat/boat.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/boat/boat_desti.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/boat/boat_contact.js') }}" type="text/javascript"></script> 
    <script type="text/javascript">
        var urlBoatContactAjax = "{{ path('boat_contact_send', {'id': boat.id }) }}";
    </script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/lib/slick.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/lib/slick-theme.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/bateaux.css') }}">
{% endblock %}   
{% block title %}{{'toptitle'|trans}}{% endblock %}
{% block content %}
	<div class="clearfix">
	    <div class="col-md-3 pull-left">
	        <a href="{{ boat.miniatureWebPath }}" class="boat-photo">
	        	<img src="{{ boat.miniatureWebPath }}" class="center-block img-responsive img-thumbnail" alt="photo {{ boat.name }}" />
	    	</a>
	        {% include "AppBundle:Front:Bateau/boat_available.html.twig" %}
	        {% include "AppBundle:Front:Bateau/boat_crew.html.twig" %}
	        {% include "AppBundle:Front:Bateau/boat_price_details.html.twig" %}
	    </div>
	    <h1>
	        {{ boat.name }}
	    </h1>
	    <div class="col-md-9 boat-center">
	    	<div class="clearfix">
		    	<div class="col-md-8">
		            <div class="col-md-12 text-justify">
			            <div class="well">
			                {{ boat.description|raw }}
			            </div>
					    <div class="bateau-photo slider-boat clearfix">
					        {% if boat.photoVoileWebPath is not null %}<div class="slider-item"><a href="{{ boat.photoVoileWebPath }}" class="boat-slider-photo"><img class="img-responsive img-thumbnail" src="{{ boat.photoVoileWebPath }}" alt="photo voile" /></a></div>{% endif %}
					        {% if boat.photoCarreWebPath is not null %}<div class="slider-item"><a href="{{ boat.photoCarreWebPath }}" class="boat-slider-photo"><img class="img-responsive img-thumbnail" src="{{ boat.photoCarreWebPath }}" alt="photo carre" /></a></div>{% endif %}
					        {% if boat.photoCabineWebPath is not null %}<div class="slider-item"><a href="{{ boat.photoCabineWebPath }}" class="boat-slider-photo"><img class="img-responsive img-thumbnail" src="{{ boat.photoCabineWebPath }}" alt="photo cabine" /></a></div>{% endif %}
				            {% if boat.photoMouillageWebPath is not null %}<div class="slider-item"><a href="{{ boat.photoMouillageWebPath }}" class="boat-slider-photo"><img class="img-responsive img-thumbnail" src="{{ boat.photoMouillageWebPath }}" alt="photo mouillage" /></a></div>{% endif %}
				            {% if boat.photoCockpitWebPath is not null %}<div class="slider-item"><a href="{{ boat.photoCockpitWebPath }}" class="boat-slider-photo"><img class="img-responsive img-thumbnail" src="{{ boat.photoCockpitWebPath }}" alt="photo cockpit"  /></a></div>{% endif %}
				        </div>
			        </div>
		        </div>
		        <div class="col-md-4">
		        	{% include "AppBundle:Front:Bateau/boat_details.html.twig" %}
		        </div>
    			{% include "AppBundle:Front:Bateau/boat_desti.html.twig" %}
		        {% include "AppBundle:Front:Bateau/boat_contact.html.twig" %}
	        </div>
	    </div>
    </div>
{% endblock content %}