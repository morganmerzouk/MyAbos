{% extends "AppBundle:Front:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/lib/slick.js') }}" type="text/javascript"></script>  
    <script src="{{ asset('bundles/app/js/skipper/skipper.js') }}" type="text/javascript"></script>  
    <script src="{{ asset('bundles/app/js/skipper/skipper_contact.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        var urlSkipperContactAjax = "{{ path('skipper_contact', {'id': skipper.id }) }}";
    </script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/lib/slick.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/lib/slick-theme.css') }}">
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/skippers.css') }}">
{% endblock %}   
{% block title %}{{'toptitle'|trans}} - {{'crew'|trans}}{% endblock %}
{% block content %}	
	<div class="col-md-3 pull-left">
		<img src="{{ skipper.avatarWebPath }}" class="avatar img-responsive img-thumbnail" />
		<ul>
			{% if skipper.yearsSailing is not null %}<li><strong>{{'sail_for'|trans}}:</strong> {{ skipper.yearsSailing }} {{'years'|trans }}</li>{% endif %}
			{% if skipper.yearsKiteSurfing is not null %}<li><strong>{{'kitesurf_for'|trans}}:</strong> {{ skipper.yearsKiteSurfing }} {{'years'|trans }}</li>{% endif %}
			{% if skipper.otherCertifications is not null %}<li><strong>{{'other_certifications'|trans}}:</strong> {{ skipper.otherCertifications }}</li>{% endif %}
			{% if skipper.languagesSpoken is not null and skipper.languagesSpoken|length > 0 %}<li><strong>{{'languages_spoken'|trans}}:</strong>
		        {% for langue in skipper.languagesSpoken %}{% if loop.index > 1 %}, {% endif %}{{ langue }}{% endfor %}</li>
		    {% endif %}
		    {% if skipper.hobbies is not null %}<li><strong>{{'hobbies'|trans}}:</strong> {{ skipper.hobbies }}</li>{% endif %}
		</ul>
        {% include "AppBundle:Front:Skipper/skipper_bateau.html.twig" %}
    	{% include "AppBundle:Front:Skipper/skipper_price_details.html.twig" %}
	</div>
	<h1>
		Captain {{ skipper.name }}
	</h1>
	<div class="col-md-9 skipper-center">
		<div class="col-md-8">
			<div class="text-justify well">
				{{ skipper.description|raw }}
			</div>
		</div>
		<div class="col-md-4">
			{% include "AppBundle:Front:Skipper/skipper_available.html.twig" %}
        </div>
		<div class="col-md-12">
			{% include "AppBundle:Front:Skipper/skipper_desti.html.twig" %}
			{% include "AppBundle:Front:Skipper/skipper_contact.html.twig" %}
		</div>
	</div>
{% endblock content %}