<div class="skipper-desti">
    {% set format = app.request.locale == "en" ? 'm/d/Y' : 'd/m/Y' %}
    {% if itinerairesCroisiere|length > 0 %}
	    <div class="{% if offrespeciale is not null %}col-md-9{% else %}col-md-12{% endif %} boat-desti">
	        <div class="boat-desti-block-localisation panel panel-info">
		        <div class="panel-heading">
			        <h3 class="boat-desti-localisation panel-title">
			            {{'boat-desti-itineraries-boat'|trans }}
			        </h3>
		        </div>
	        	<div class="panel-body">
	                {{'boat-desti-itineraries-boat-label-destination'|trans }}:
	                {% if itinerairesCroisiere|length > 0 %}
	                    <ul>
	                        {% for itineraireCroisiere in itinerairesCroisiere %}
	                            <li><a href="#" id="lien-{{itineraireCroisiere.itineraire.id}}">{{ itineraireCroisiere.itineraire.destination }}</a></li>
	                        {% endfor %}
	                    </ul>
	                {% endif %}
	            </div>
	        </div>
	        {% for itineraireCroisiere in itinerairesCroisiere %}
	        	<div class="panel panel-info">
		        	<div class="panel-heading cible" id="cible-{{itineraireCroisiere.itineraire.id}}">
		                {{ itineraireCroisiere.itineraire }}
		            </div>
		            <div class="boat-desti-itineraire panel-body">
		            	<div>
			                <img class="pull-right img-thumbnails" src="{{ itineraireCroisiere.itineraire.miniatureWebPath }}" />
			            	<div>
			                    {{ itineraireCroisiere.itineraire.description|raw }}
			                </div>
			                <div>
			                	{% if itineraireCroisiere.dateDebut %}
				                    {{'skipper-desti-date-operation'|trans }} {{ itineraireCroisiere.dateDebut|date(format) }}
				                    {{'periode_au'|trans }} {{ itineraireCroisiere.dateFin|date(format) }}
			                    {% endif %}
			                </div>
		                </div>
			        </div>
	            </div>
	        {% endfor %}
	    </div>
	    {% if offrespeciale is not null %}
		 	<div class="col-md-3 col-offre-speciale">
	            <div class="panel panel-info boat-block-special-offer">
		        	<div class="panel-heading">
		        		<h2 class="panel-title">{{'special_offer_with'|trans }} {{ offrespeciale.skipper.name }}</h2>
	        		</div>
	        		<div class="panel-body">
				        <img class="img-thumbnail center-block" src="{{ offrespeciale.bateau.miniatureWebPath }}" alt="photo {{ offrespeciale.bateau.name }}" /><br />
				        <h3>{{ offrespeciale.bateau.name }}</h3>
				        <p class="bateau-prix-semaine"> 
				             {{'boat_price_from'|trans}} 	                       
			                 {% if offrespeciale.tarifHuitPersonnes is not null %}{{offrespeciale.tarifHuitPersonnes}}
				             {% elseif offrespeciale.tarifSeptPersonnes is not null %}{{offrespeciale.tarifSeptPersonnes}}
				             {% elseif offrespeciale.tarifSixPersonnes is not null %}{{offrespeciale.tarifSixPersonnes}}
				             {% elseif offrespeciale.tarifCinqPersonnes is not null %}{{offrespeciale.tarifCinqPersonnes}}
				             {% elseif offrespeciale.tarifQuatrePersonnes is not null %}{{offrespeciale.tarifQuatrePersonnes}}
				             {% elseif offrespeciale.tarifTroisPersonnes is not null %}{{offrespeciale.tarifTroisPersonnes}}
				             {% elseif offrespeciale.tarifDeuxPersonnes is not null %}{{offrespeciale.tarifDeuxPersonnes}}
				             {% endif %}
				             â‚¬ <br /><span class="boat-tarif-pour text-center">({{ offrespeciale.tarifPour|trans}})</span>
				        </p>
				        <div class="bateaux-icones col-md-4"><img src="{{ asset('bundles/app/images/icones/boat/icon-boat.png') }}" /><br />{{offrespeciale.bateau.type}}</div>
					        <div class="bateaux-icones col-md-4"><img src="{{ asset('bundles/app/images/icones/boat/icon-cabins.png') }}" /><br />{{offrespeciale.bateau.nbCabine}} {{'boat_cabine'|trans}}</div>
					        {% if (offrespeciale.bateau.nbCouchage > 0) %}<div class="bateaux-icones col-md-4"><img src="{{ asset('bundles/app/images/icones/boat/icon-bed.png') }}" /><br />{{offrespeciale.bateau.nbCouchage}} {{'boat_bed'|trans}}</div>{% endif %}
					        
				        <p class="bateaux-description">
				        	{% if offrespeciale.bateau.description|length > 100 %}
				        		{{ offrespeciale.bateau.description|striptags|slice(0,100)|raw }}...
				        	{% else %}
				        		{{ offrespeciale.bateau.description|striptags|raw }}
				    		{% endif %}
						</p>
				        <a class="btn btn-sm btn-warning pull-right" href="{{ path('offrespeciale', { 'id': offrespeciale.id, 'slug': offrespeciale.name|slugify }) }}">{{'suite'|trans}}</a>
		    		</div>
		    	</div>
		    </div>
	    {% endif %}
    {% else %}
    	<div class="col-md-12">
    		{{ 'no_cruise_skipper'|trans }}
		</div>
	{% endif %}
</div>