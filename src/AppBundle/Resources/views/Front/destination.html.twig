{% extends "AppBundle:Front:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script src="http://openlayers.org/api/OpenLayers.js"></script>
	<script src="http://openweathermap.org/js/OWM.OpenLayers.1.3.4.js" ></script>
    <script src="{{ asset('bundles/app/js/destination.js') }}" type="text/javascript"></script> 
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/destinations.css') }}">
    <link rel="stylesheet" href="http://openlayers.org/en/v3.4.0/css/ol.css" type="text/css">
{% endblock %}   
{% block title %}{{'toptitle'|trans}} - {{ destination.name }}{% endblock %}
{% block content %}
    {% set format = app.request.locale == "en" ? 'm/d/Y' : 'd/m/Y' %}
	<h1 class="destinations">{{ destination.name }}</h1>
	{% if weathers is not null %}
			<h2 class="weather-forecast">{{'Weather'|trans }} - {{ destination.name }}</h2>
			<div>
		        {% for weather in weathers %}
		        	{% if loop.index == 1 or loop.index == 6 %}
		        		<div class="col-md-weather-container">
		        	{% endif %}
		        	<div class="col-md-weather text-center">
			        	{{ weather.time.day|date(format) }}<br />
			        	<img src="{{ weather.weather.iconUrl }}" alt="icon {{ weather.weather.description }}"  /><strong>{{ weather.temperature|raw }}</strong><br />
			        	{{ weather.weather.description }}
			        	<div class="text-left">
				        	<div class="even"><strong>{{'wind_speed'|trans }}:</strong> {{ weather.wind.speed }}</div>
				        	<div class="even">{{ weather.wind.speed.description }}</div>
				        	<div class="even"><strong>{{'wind_direction'|trans }}:</strong> {{ weather.wind.direction }}</div>
			        	</div>
		        	</div>
		        	{% if loop.index == 5 or loop.index == 10 %}
		        		</div>
		        	{% endif %}
		        {% endfor %}
	        	<div>
		        	Last update: {{ weathers.lastUpdate|date(format ~ " H:i") }}<br />
		        	Sunrise: {{ weathers.sun.rise|date("H:i:s") }}<br />
		        	Sunset: {{ weathers.sun.set|date("H:i:s") }}
	        	</div>
        	</div>
		{% endif %}
	<div class="{% if offresSpeciales|length > 0 %}col-md-8{% else %}col-md-12{% endif %}">
		{{ destination.description|raw }}
	</div>
	{% if offresSpeciales|length > 0 %}
		<div class="col-md-4 block-bateau-destination">
	        <h4>{{'cruise_to'|trans}} {{ destination.name }}</h4>
	        {% for offreSpeciale in offresSpeciales %}
	            <div class="row">
	                <img class="img-thumbnail" src="{{ offreSpeciale.miniatureWebPath }}" />
	                <strong>{{'From'|trans }}</strong> {{ offreSpeciale.dateDebut|date(format) }} <strong>{{'to'|trans }}</strong> {{ offreSpeciale.dateFin|date(format) }}
	                <strong>{{'Boat'|trans }}: </strong> <a href="{{ path('boat', { 'id': offreSpeciale.bateau.id }) }}">{{ offreSpeciale.bateau.name }}</a>
	                <strong>Skipper: </strong> <a href="{{ path('skipper', { 'id': offreSpeciale.skipper.id }) }}">{{ offreSpeciale.skipper.name }}</a>
	            </div>
	        {% endfor %}
		</div>
	{% endif %}
{% endblock content %}