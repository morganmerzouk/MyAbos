{% extends "AppBundle:Front:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/lib/OpenLayers.js') }}"></script>
	<script src="{{ asset('bundles/app/js/lib/OWM.OpenLayers.1.3.4.js') }}" ></script>
    <script src="{{ asset('bundles/app/js/about_weather.js') }}" type="text/javascript"></script> 
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/ensavoirplus.css') }}">
{% endblock %}   
{% block title %}{{'toptitle'|trans}} - {{'know_more'|trans}} {{'know_more_weather'|trans}}{% endblock %}
{% block content %}
	<h1>{{'toptitle'|trans}}</h1>
	{% include "AppBundle:Front:ensavoirplus/submenu.html.twig" %}
	<div id="map" class="col-md-6 map"></div>
	<div class="col-md-6">
		<span class="col-md-6 square square-temperature">{{'about_weather_temperature'|trans }}</span>
		<span class="col-md-6 square square-wind">{{'about_weather_wind'|trans }}</span>
		<span class="col-md-6 square square-cloud">{{'about_weather_clouds'|trans }}</span>
		<span class="col-md-6 square square-pressure">{{'about_weather_pressure'|trans }}</span>
	</div>
{% endblock content %}