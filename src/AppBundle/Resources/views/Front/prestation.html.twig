{% extends "AppBundle:Front:layout.html.twig" %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="all" href="{{ asset('bundles/app/css/prestations.css') }}">
{% endblock %}   
{% block title %}{{'toptitle'|trans}} - {{ prestation.name }}{% endblock %}


{% block content %}
	<h1>{{'home_prestations'|trans}} - {{ prestation.name }}</h1>
    <div class="block-prestations-name">
        {% for prestationName in prestationsName %}<a href="{{ path('prestation', { 'id': prestationName.id }) }}" class="prestations-name {{ prestationName.name == prestation.name  ? "active" : "" }}">{{ prestationName.name }}</a>{% endfor %}
    </div>
	<div class="{% if boats is not null %}col-md-9{% else %}col-md-12{% endif %}">
		{{ prestation.description|raw }}
	</div>
	{% if boats is not null %}
		<div class="col-md-3 prestation-boat-container">
	    	<div class="prestation-boat">
				<h2 class="prestation-boat-title">{{'boat_offering'|trans }} {{ prestation.name }}</h2>
		    	{% for boat in boats %}
		    		<div class="boat">
		    			<img src="{{ boat.miniatureWebPath }}" class="col-md-4 img-responsive img-thumbnails pull-left" />
		    			<div class="boat-name">{{ boat.name }}</div>
		    		</div>
		    	{% endfor %}
	    	</div>
	    </div>
    {% endif %}
{% endblock content %}